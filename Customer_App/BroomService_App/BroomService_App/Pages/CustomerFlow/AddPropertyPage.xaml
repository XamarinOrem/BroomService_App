                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PoolRadioCommand}" CommandParameter="Yes"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="FillAndExpand">
                            <Image Style="{StaticResource LoginImageStyle}" HorizontalOptions="Start" Source="{Binding RadioNoImagePool}"/>
                            <Label Text="{strings:Translate No}" Style="{StaticResource AddPropertyLabelStyle}" TextColor="{StaticResource Black2Color}" VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PoolRadioCommand}" CommandParameter="No"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </Grid>

                </StackLayout>

                <!--GardenTitle Field-->
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Spacing="10">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="20"  Margin="20,30,20,0">
                        <BoxView HeightRequest="14" WidthRequest="14" CornerRadius="7" BackgroundColor="{StaticResource BlueColor}" VerticalOptions="Center"/>
                        <Label Text="{strings:Translate GardenTitle}" Style="{StaticResource AddPropertyLabelStyle}" VerticalTextAlignment="Center"/>
                    </StackLayout>
                    <Grid HorizontalOptions="FillAndExpand" Margin="50,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Orientation="Horizontal" Grid.Column="0" HorizontalOptions="FillAndExpand">
                            <Image Style="{StaticResource LoginImageStyle}" HorizontalOptions="Start" Source="{Binding RadioYesImageGarden}"/>
                            <Label Text="{strings:Translate Yes}" Style="{StaticResource AddPropertyLabelStyle}" TextColor="{StaticResource Black2Color}" VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GardenRadioCommand}" CommandParameter="Yes"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="FillAndExpand">
                            <Image Style="{StaticResource LoginImageStyle}" HorizontalOptions="Start" Source="{Binding RadioNoImageGarden}"/>
                            <Label Text="{strings:Translate No}" Style="{StaticResource AddPropertyLabelStyle}" TextColor="{StaticResource Black2Color}" VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GardenRadioCommand}" CommandParameter="No"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </Grid>

                </StackLayout>

                <!--ElevatorTitle Field-->
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Spacing="10">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="20"  Margin="20,30,20,0">
                        <BoxView HeightRequest="14" WidthRequest="14" CornerRadius="7" BackgroundColor="{StaticResource BlueColor}" VerticalOptions="Center"/>
                        <Label Text="{strings:Translate ElevatorTitle}" Style="{StaticResource AddPropertyLabelStyle}" VerticalTextAlignment="Center"/>
                    </StackLayout>
                    <Grid HorizontalOptions="FillAndExpand" Margin="50,0,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Orientation="Horizontal" Grid.Column="0" HorizontalOptions="FillAndExpand">
                            <Image Style="{StaticResource LoginImageStyle}" HorizontalOptions="Start" Source="{Binding RadioYesImageElevator}"/>
                            <Label Text="{strings:Translate Yes}" Style="{StaticResource AddPropertyLabelStyle}" TextColor="{StaticResource Black2Color}" VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ElevatorRadioCommand}" CommandParameter="Yes"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="FillAndExpand">
                            <Image Style="{StaticResource LoginImageStyle}" HorizontalOptions="Start" Source="{Binding RadioNoImageElevator}"/>
                            <Label Text="{strings:Translate No}" Style="{StaticResource AddPropertyLabelStyle}" TextColor="{StaticResource Black2Color}" VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ElevatorRadioCommand}" CommandParameter="No"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </Grid>

                </StackLayout>

                <!--Done Button Field-->
                <Button Text="{strings:Translate DoneBtn}" Command="{Binding DoneCommand}" BackgroundColor="{StaticResource BlueColor}" HeightRequest="50" HorizontalOptions="Fill" Margin="50,30" CornerRadius="25" TextColor="{StaticResource WhiteColor}" Style="{StaticResource ButtonStyle}" FontSize="Medium"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>